{
  "name": "jim-nielsen.com",
  "version": "1.0.0",
  "description": "Personal web site",
  "main": "",
  "type": "module",
  "engine": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.1",
    "fs-extra": "^7.0.0",
    "html": "github:jimniels/html",
    "http-server": "^0.11.1",
    "mustache": "^4.2.0",
    "node-fetch": "^2.2.0",
    "slugify": "^1.3.1",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "clear-cache": "rm -rf ./cache",
    "build:data": "node scripts/cache-data.js",
    "build": "rm -f static/index.html && node src/index.js > static/index.html",
    "build-old": "rm -f index.html && node scripts/build.js",
    "build-node": "rm -f index.html && node src/index.js",
    "start": "npm run build && chokidar 'static/' 'src/**/*' 'data/' -i 'static/index.html' -c 'npm run build' & http-server static -o -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimniels/jimniels.github.io.git"
  },
